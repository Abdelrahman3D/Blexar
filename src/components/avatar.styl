.avatar
  display: inline-block
  border-radius: 10em
  overflow: hidden
  width: 3em
  height: 3em
  line-height: 3
  text-align: center
  background-color: $primary
  color: $white
  font-weight: $font-weight-semi-bold
  margin: 0
  generateSizes()

  &:not(:first-child)
  &:not(:last-child)
    margin: 0

  img
    margin: 0
    width: 100%
    height: 100%