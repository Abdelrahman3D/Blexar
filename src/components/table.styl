.table
  overflow: hidden
  width: 100%
  border-spacing: 0
  border-collapse: separate
  border-radius: $border-radius
  color: $black
  text-align: $dir-start

  &:not(:last-child)
    margin-bottom: $margin

  thead
    background-color: $white
    th
      border-bottom: $border solid $gray
      padding: ($padding * 2) $padding
      font-weight: $font-weight-bold

  tfoot
    th
      border-top: $border solid $gray
      padding: ($padding * 2) $padding

  td
    padding: ($padding * 2) $padding
    border-top: $border solid $gray

  // generate size modifiers
  generateSizes()

  &.is-striped
    tbody tr:nth-of-type(odd)
      background-color: $light

  &.is-bordered
    border: $border solid $gray
    th,
    td
      &:not(:last-child)
        border-{$dir-end}: $border solid $gray

  &.is-clean
    td
      border-top: 0

  &.is-center
    text-align: center

  &.is-top tbody
    vertical-align: top

  &.is-bottom tbody
    vertical-align: bottom

  &.is-middle tbody
    vertical-align: middle

  &.is-mobile-colapsed
    th, td
      &:not(:last-child)
        +mobile()
          border-right: 0
      +mobile()
        display: block
        width: 100%
    thead
      th
        +mobile()
          border-bottom: 0
    tr
      +mobile()
        display: block
        border-top: $border solid $gray

    td
      +mobile()
        border: 0

.table-responsive
  display: block;
  width: 100%;
  overflow-x: auto;

.table-sort
  float: right
  padding: 0
  outline: 0
  background: none
  border: none

  &.is-active
    fill: $primary
    stroke: $primary

  &.is-desc
    transform: scaleY(-1)