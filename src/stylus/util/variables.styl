/**
 * Device Breakpoint
 */
$mobile ?= 0
$tablet ?= 768px
$desktop ?= 991px
$widescreen ?= 1360px
$ultrawide ?= 1920px

/**
 * elemets sizes
 */
$size-tiny ?= 12px
$size-small ?= 14px
$size-normal ?= 16px
$size-large ?= 20px
$size-massive ?= 24px

/**
 * typography
 */
$display-1 ?= 68px
$display-2 ?= 60px
$display-3 ?= 52px
$display-4 ?= 48px
$header-1 ?= 40px
$header-2 ?= 32px
$header-3 ?= 28px
$header-4 ?= $size-massive
$header-5 ?= $size-large
$header-6 ?= $size-normal

$font-tiny ?= $size-tiny
$font-small ?= $size-small
$font-normal ?= $size-normal
$font-large ?= $size-large
$font-massive ?= $size-massive

$lineheight ?= 1.1875
$weight-light ?= 200
$weight-default ?= 400
$weight-bold ?= 700
$weight-super ?= 900


/**
 * grid
 */
$columns ?= 12
$dir ?= ltr
$dir-start ?= setDirection('start')
$dir-end ?= setDirection('end')
$gutter ?= 15px
$gutter-full ?= 8vw
$container-mobile ?= calc(100% - 22px)
$container-tablet ?= $tablet - (22 * 2)
$container-desktop ?= $desktop - (22 * 3)
$container-widescreen ?= $widescreen - (22 * 4)
$container-ultrawide ?= $ultrawide - (22 * 5)

/*
 * style
 */
$margin ?= 10px
$padding ?= 0.5em
$padding-px ?= 20px
$modal-spacing ?= 2.5em
$border-radius ?= 2px
$border ?= 1px
$outline ?= 3px
$outline-opacity ?= 25%

/**
 * animation
 */
$transition-time ?= 0.4s
$transition-function ?= ease-in-out

/**
 * modifiers
 */
$modifiers-size ?= 'tiny' 'small' 'normal' 'large' 'massive'
$modifiers-style ?= 'block' 'disabled' 'rounded' 
$modifiers-color ?= 'primary' 'secondary' 'info' 'success' 'warning' 'danger' 'black' 'white' 'dark' 'light'